@model IEnumerable<Breweries.Services.ViewModels.Brewery.BreweryViewModel>
@{
    ViewBag.Title = "Brewaries";
}

<h1>Breweries</h1>
<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-action="Index" method="GET">
    <div class="form-row">
        <div class="col-md-6 mb-3">
            <label for="name">Name</label>
            <input type="text" class="form-control" id="name" placeholder="Name">
        </div>
        <div class="col-md-6 mb-3">
            <label for="city">City</label>
            <input type="text" class="form-control" id="city" placeholder="City">
        </div>
        <div class="col-md-6 mb-3">
            <label for="state">State</label>
            <input type="text" class="form-control" id="state" placeholder="State">
        </div>
    </div>
    <button class="btn btn-primary" type="submit">Search</button>
</form>

<br />

<table class="table">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Status</th>
            <th scope="col">City</th>
            <th scope="col">State</th>
            <th scope="col">Street</th>
            <th scope="col">Postal Code</th>
            <th scope="col"> Actions </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var brewery in Model)
        {
            <tr>
                <td>@brewery.Name</td>
                <td>@brewery.BreweryTypeName</td>
                <td>@brewery.CityName</td>
                <td>@brewery.StateName</td>
                <td>@brewery.Street</td>
                <td>@brewery.PostalCode</td>
                <td>
                    <div class="btn-group" role="group" aria-label="Actions">
                        @if (!string.IsNullOrEmpty(brewery.Url))
                        {
                            <a class="btn btn-info" href="@brewery.Url">View</a>
                        }
                        else
                        {
                            <a class="btn btn-info disabled" href="@brewery.Url">View</a>
                        }
                        <a asp-controller="Breweries" asp-action="Edit" asp-route-Id="@brewery.Id" class="btn btn-warning">Edit</a>
                        <a asp-controller="Breweries" asp-action="Delete" asp-route-Id="@brewery.Id" class="btn btn-danger">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
